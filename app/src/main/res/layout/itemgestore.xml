<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="20dp"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="716dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">


            <Button
                android:id="@+id/upd_ristorante"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/modifica" />

            <TextView
                android:id="@+id/signup_title_text"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_centerVertical="true"
                android:fontFamily="@font/muli_black"
                android:text="Il tuo ristorante"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:transitionName="transition_title_text" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="179dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_ristorante"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />


        </LinearLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nome_ristorante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Nome"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/indirizzo_ristorante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Indirizzo"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="25sp" />


            <TextView
                android:id="@+id/numero_ristorante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Numero"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="25sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>

</androidx.cardview.widget.CardView>